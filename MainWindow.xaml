<Window x:Name="MainWind" x:Class="QUIKSharpTEST2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QUIKSharpTEST2"
        mc:Ignorable="d"
        Title="TestQuik# v2" Height="310" Width="740" Loaded="MainWind_Loaded" Closed="MainWind_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="130*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Grid Height="28" HorizontalAlignment="Stretch" Margin="1" Width="734">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Content="Button" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center"
                        RenderTransformOrigin="0.454,1.204" Height="19" Width="52" FontWeight="Bold" Margin="0"/>
                <TextBox Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                         Margin="5" TextWrapping="Wrap" x:Name="TextBoxAdd"
                         VerticalAlignment="Center" Width="120"  FontSize="13" FontWeight="Bold"/>
            </Grid>
        </StackPanel>
        <DataGrid x:Name="DataGrdTools" FontSize="16" FontWeight="Bold" Margin="10,10,10,10" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Width="30" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path = SecurityCode}" Header="Tool" Width="60" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Binding="{Binding Path = Isactiv, UpdateSourceTrigger=PropertyChanged}" Header="IsActiv" Width="60" IsReadOnly="False"/>
                <DataGridComboBoxColumn ItemsSource="{Binding Source = Operation}"
                                         
                                        Header="Buy/Sel" Width="70" IsReadOnly="False"/>
                <DataGridTextColumn Binding="{Binding Path = LastPrice}" Header="LastPrice" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path = Positions}" Header="Position" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path = PriceAccuracy}" Header="PriceAccur" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path = Step}" Header="Step" Width="50" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="BtnBuy" Width="65">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="Demonsracia" Content="Buy"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="BtnSel" Width="65">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="Demonsracia" Content="Sel"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn  Header="ComboBox" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate >
                            <ComboBox  ItemsSource="{Binding Source = Operation}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
